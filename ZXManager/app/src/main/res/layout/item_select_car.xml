<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/list_background_shape">

    <TextView
        android:id="@+id/waybill_cy_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_trhee"
        android:text="姓名："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/waybill_cy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_trhee"
        android:text="张师傅"
        app:layout_constraintBottom_toBottomOf="@+id/waybill_cy_name_text"
        app:layout_constraintStart_toEndOf="@+id/waybill_cy_name_text"
        app:layout_constraintTop_toTopOf="@+id/waybill_cy_name_text" />

    <TextView
        android:id="@+id/ratingbar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="信用等级："
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_trhee"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/ratingbar"
        app:layout_constraintBottom_toBottomOf="@+id/ratingbar"
        app:layout_constraintEnd_toStartOf="@id/ratingbar" />

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        app:mrb_progressTint="@color/bacolor"
        app:mrb_secondaryProgressTint="@color/bacolor"
        style="@style/Widget.MaterialRatingBar.RatingBar"
        app:layout_constraintBottom_toBottomOf="@+id/waybill_cy_name_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/waybill_cy_name_text">
    </me.zhanghai.android.materialratingbar.MaterialRatingBar>

    <TextView
        android:id="@+id/waybill_car_no_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车牌号码："
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_size_trhee"
        android:textColor="@color/text_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/waybill_cy_name_text"/>

    <TextView
        android:id="@+id/waybill_car_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="湘A10SD1"
        android:textSize="@dimen/text_size_trhee"
        android:textColor="@color/text_black"
        app:layout_constraintBottom_toBottomOf="@+id/waybill_car_no_text"
        app:layout_constraintStart_toEndOf="@+id/waybill_car_no_text"
        app:layout_constraintTop_toTopOf="@+id/waybill_car_no_text" />

    <TextView
        android:id="@+id/waybill_cy_car_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_trhee"
        android:text="车辆信息："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/waybill_car_no_text" />

    <TextView
        android:id="@+id/waybill_cy_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_trhee"
        android:text="高栏车/9.6米/可载50吨"
        app:layout_constraintBottom_toBottomOf="@+id/waybill_cy_car_text"
        app:layout_constraintStart_toEndOf="@+id/waybill_cy_car_text"
        app:layout_constraintTop_toTopOf="@+id/waybill_cy_car_text" />

    <TextView
        android:id="@+id/waybill_car_phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_trhee"
        android:text="联系方式："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/waybill_cy_car_text" />

    <TextView
        android:id="@+id/waybill_car_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_trhee"
        android:text="13546546546"
        app:layout_constraintBottom_toBottomOf="@+id/waybill_car_phone_text"
        app:layout_constraintStart_toEndOf="@+id/waybill_car_phone_text"
        app:layout_constraintTop_toTopOf="@+id/waybill_car_phone_text" />

    <ImageView
        android:id="@+id/car_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/phone"
        app:layout_constraintEnd_toEndOf="@+id/checkBox_car"
        app:layout_constraintStart_toStartOf="@+id/checkBox_car"
        app:layout_constraintTop_toBottomOf="@id/ratingbar" />

    <CheckBox
        android:id="@+id/checkBox_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:text="选择"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_trhee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/car_phone" />

    <LinearLayout
        android:id="@+id/car_info_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waybill_car_phone_text">

        <LinearLayout
        android:id="@+id/layout_person_rz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/defense" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text="实名认证"
        android:textColor="@color/bacolor"
        android:textSize="13dp" />
        </LinearLayout>


        <LinearLayout
        android:id="@+id/layout_company_rz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/defenseno" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text="车辆认证"
        android:textColor="@color/green"
        android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>