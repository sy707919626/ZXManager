<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_bar_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_bule">

    <android.support.v7.widget.Toolbar
        android:id="@+id/title_base_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/image_back_detail_bar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:onClick="back"
            android:src="@drawable/bar_back_bai" />

        <TextView
            android:id="@+id/text_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="@dimen/button_size" />

        <TextView
            android:id="@+id/text_detail_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:drawablePadding="3dp"
            android:text="帮助"
            android:textColor="@color/white"
            android:textSize="@dimen/login_edit_size" />
    </android.support.v7.widget.Toolbar>

</LinearLayout>